{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "declaration": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "primitives": ["ui/primitives"],
      "icons": ["ui/icons"],
      "hooks": ["ui/hooks"],
      "layout": ["ui/layout"],
      "utils": ["ui/utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.figma.tsx", "**/*.stories.tsx"]
}
